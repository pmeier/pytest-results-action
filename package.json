{
  "name": "pytest-results-actions",
  "version": "0.7.0",
  "description": "Post pytest results to the workflow summary",
  "main": "action/index.js",
  "scripts": {
    "build": "tsc && ncc build --license=LICENSE --out action dist/index.js",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmeier/pytest-results-actions.git"
  },
  "keywords": [
    "pytest",
    "results",
    "actions",
    "summary"
  ],
  "author": "Philip Meier",
  "license": "BSD 3-Clause",
  "dependencies": {
    "@actions/core": "^1.10",
    "@actions/glob": "^0.4",
    "fast-xml-parser": "^4.1"
  },
  "devDependencies": {
    "@types/node": "^20.0",
    "@vercel/ncc": "^0.36",
    "prettier": "^2.8",
    "typescript": "^5.0"
  }
}
